<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lay">
    <!--搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fffafafa"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户列表"
                android:textColor="#ff707070"
                android:textSize="14sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_qxpx"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:background="@drawable/qqsx"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消排序"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_sx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@mipmap/icon_kh_px" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:text="排序"
                android:textColor="#ff707070"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@mipmap/icon_kh_bom" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_sx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@mipmap/icon_kh_sx" />

            <TextView
                android:id="@+id/tv_sx2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:text="筛选"
                android:textColor="#ff707070"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_pos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@mipmap/icon_kh_bom" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>